{
  "private": true,
  "name": "purescript-grain",
  "scripts": {
    "spago": "spago",
    "watch": "spago build -w -u '--strict --stash --censor-lib --is-lib=.spago'",
    "clean": "rm -rf output",
    "test": "spago -x test.dhall test -u '--strict --stash --censor-lib --is-lib=.spago'",
    "bump-version": "LC_ALL=C.UTF-8 spago bump-version --no-dry-run",
    "pulp:publish": "pulp publish",
    "pulp:login": "pulp login"
  },
  "dependencies": {
    "bower": "^1.8.12",
    "pulp": "^15.0.0",
    "purescript": "^0.14.0",
    "purescript-psa": "^0.8.2",
    "spago": "^0.19.1"
  }
}
